{
  "name": "Customize font size",
  "author": "minnieo",
  "version": "0.1.1",
  "label": "Change font size",
  "login": false,
  "recurs": true,
  "desc": "Customize the font size site-wide. The window will become transparent as you increment/decrement font sizes.",
  "entrypoint": "resize_text",
  "namespace": "resize",
  "page": "accessibility",
  "catch_reset": [
    "optionHeader",
    "optionPosts",
    "optionComments",
    "optionHomeSidebar",
    "optionCreate",
    "optionProfile",
    "optionUserSettings",
    "optionMessages",
    "optionSortBy",
    "optionNotifs",
    "optionFooter"
  ],
  "fields": [
    {
      "type": "reset",
      "key": "resetNumFields",
      "label": "Reset values to defaults:",
      "value": "reset"
    },
    {
      "type": "number",
      "initial": "#header.header",
      "key": "optionHeader",
      "label": "Header:",
      "step": "0.1",
      "min": "5",
      "max": "50"
    },
    {
      "type": "number",
      "initial": "article.entry .content p",
      "key": "optionPosts",
      "label": "Posts:",
      "step": "0.1",
      "min": "5",
      "max": "50"
    },
    {
      "type": "number",
      "initial": ".entry-comment .content",
      "key": "optionComments",
      "label": "Comments:",
      "step": "0.1",
      "min": "5",
      "max": "50"
    },
    {
      "type": "number",
      "initial": "div.page-notifications",
      "key": "optionNotifs",
      "label": "Notifications:",
      "step": "0.1",
      "min": "5",
      "max": "50"
    },
    {
      "type": "number",
      "initial": "div.container form[name=\"user_settings\"",
      "key": "optionUserSettings",
      "label": "Settings, magazine index:",
      "step": "0.1",
      "min": "5",
      "max": "50"
    },
    {
      "type": "number",
      "initial": "aside#options menu li a, aside#options menu i",
      "key": "optionSortBy",
      "label": "Sort by bar:",
      "step": "0.1",
      "min": "5",
      "max": "50"
    },
    {
      "type": "number",
      "initial": "aside#sidebar section.related-magazines",
      "key": "optionHomeSidebar",
      "label": "Sidebars:",
      "step": "0.1",
      "min": "5",
      "max": "50"
    },
    {
      "type": "number",
      "initial": "form.entry-create",
      "key": "optionCreate",
      "label": "Create (threads, mags, links, etc):",
      "step": "0.1",
      "min": "5",
      "max": "50"
    },
    {
      "type": "number",
      "initial": "div.user-box",
      "key": "optionProfile",
      "label": "User profiles:",
      "step": "0.1",
      "min": "5",
      "max": "50"
    },
    {
      "type": "number",
      "initial": "div.page-messages",
      "key": "optionMessages",
      "label": "Inbox messages:",
      "step": "0.1",
      "min": "5",
      "max": "50"
    }
  ]
}
