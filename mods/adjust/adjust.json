{
  "name": "Adjust colors",
  "author": "minnieo",
  "version": "0.1.0",
  "label": "Adjust colors",
  "login": false,
  "recurs": true,
  "desc": "Adjust the colors of the site.",
  "entrypoint": "adjust",
  "namespace": "adjust",
  "page": "accessibility",
  "catch_reset": [
    "sepia",
    "hueRotate",
    "bright",
    "saturate",
    "contrast",
    "upvote",
    "downvote",
    "boost"
  ],
  "fields": [
    {
      "type": "reset",
      "key": "resetAdjust",
      "label": "Reset values to defaults:",
      "value": "reset"
    },
    {
      "type": "range",
      "initial": 0,
      "key": "sepia",
      "label": "Sepia",
      "step": 0.1,
      "min": 0,
      "max": 10,
      "show_value": true
    },
    {
      "type": "range",
      "initial": 0,
      "key": "hueRotate",
      "label": "Hue",
      "step": 1,
      "min": 0,
      "max": 36,
      "show_value": true
    },
    {
      "type": "range",
      "initial": 0,
      "key": "bright",
      "label": "Brightness",
      "step": 0.1,
      "min": 0,
      "max": 10,
      "show_value": true
    },
    {
      "type": "range",
      "initial": 0,
      "key": "saturate",
      "label": "Saturation",
      "step": 0.1,
      "min": 0,
      "max": 10,
      "show_value": true
    },
    {
      "type": "range",
      "initial": 0,
      "key": "contrast",
      "label": "Contrast",
      "step": "0.1",
      "min": "0",
      "max": "10",
      "show_value": true
    },
    {
      "type": "color",
      "initial": "--kbin-upvoted-color",
      "key": "upvote",
      "label": "Upvote color"
    },
    {
      "type": "color",
      "initial": "--kbin-downvoted-color",
      "key": "downvote",
      "label": "Downvote color"
    },
    {
      "type": "color",
      "initial": "--kbin-meta-link-color",
      "key": "boost",
      "label": "Boost color"
    },
    {
      "type": "checkbox",
      "key": "border",
      "checkbox_label": "Border around up/downvote buttons"
    }
  ]
}
