#	fi
#}

#test_mod

echo "This commit change is of type:"
select opt in "${opts[@]}"; do
	case $opt in
	    ${opts[0]}) bump_vers major ;;
	    ${opts[1]}) bump_vers minor ;;
	    ${opts[2]}) bump_vers patch ;;
	    ${opts[3]}) : ;;
	esac
	break
done < /dev/tty
