    {
        "name": "kbin-federation-awareness",
        "author": "@Ori@sacredori.net",
        "version": "0.2.5",
        "label": "Federation Awareness",
        "login": false,
        "recurs": true,
        "desc": "Quickly identify a post/comment's federation/moderation status. Original by @CodingAndCoffee@kbin.social",
        "entrypoint": "initKFA",
        "namespace": "kbinFedAware",
        "fields": [
            {
                "type": "color",
                "initial": "#00FF64",
                "key": "kfaHomeColor",
                "label": "Home Instance"
            },
            {
                "type": "color",
                "initial": "#009BFF",
                "key": "kfaFedColor",
                "label": "Federated Instance"
            },
            {
                "type": "color",
                "initial": "#FF0000",
                "key": "kfaModColor",
                "label": "Moderated Instance"
            },
            {
                "type": "select",
                "initial": "bubble",
                "key": "kfaStyle",
                "values": ["bubble", "border"],
                "label": "Indicator Style"
            },
            {
                "type": "range",
                "key": "kfaBubbleScale",
                "initial": 5,
                "min": 1,
                "max": 10,
                "show_value": true,
                "label": "Bubble Scale (Only works if 'Indicator Style' is set to 'bubble'.)",
                "depends_on": "kfaStyle",
                "depends_value": "bubble"
            },
            {
                "type": "select",
                "initial": "both",
                "key": "kfaPostSide",
                "values": ["both", "left", "right"],
                "label": "Border Side (Only works if 'Indicator Style' is set to 'border'.)",
                "depends_on": "kfaStyle",
                "depends_value": "border"
            }
        ],
        "page": "threads"
    },
